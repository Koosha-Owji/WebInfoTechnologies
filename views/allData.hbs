<div class="row_containers">
    <div class="patient_rows">
    {{#each data}}
        <div class="patient_info">
            <p><a href="/hard_data/{{this.patientId}}">Patient Name: {{this.firstName}} {{this.lastName}}</a></p>
            {{#if (isGreater this.glucoseLevel this.glucoseUpper)}} <p style="color:red">Glucose Level: {{this.glucoseLevel}}</p> 
            {{!-- {{ Lower threshold is breached}} --}}  
            {{else if (isLess this.glucoseLevel this.glucoseLower)}} <p style="color:red">Glucose Level: {{this.glucoseLevel}}</p> 
            
            {{!-- {{ Neither threshold breached }} --}}  
            {{else}} <p>Glucose Level: {{this.glucoseLevel}}</p>
            {{/if}}
            <p>Patient Comment: {{this.glucoseComment}}</p>
        </div>
    {{/each}}
    </div>
</div>

